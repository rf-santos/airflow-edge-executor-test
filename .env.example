# Airflow Testbed - .env.example
# Copy to .env and fill in secrets. Do NOT commit your real .env.

# Postgres (local)
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Airflow core secrets
# Generate with: python3 -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
FERNET_KEY=CHANGE_ME_FERNET_KEY

# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET_KEY=CHANGE_ME_INTERNAL_API_SECRET

# Generate with: openssl rand -hex 32
WEBSERVER_SECRET_KEY=CHANGE_ME_WEBSERVER_SECRET

# Edge API secret shared with Edge workers
# Generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(48))'
EDGE_WORKER_API_SECRET_KEY=CHANGE_ME_EDGE_SECRET

# Optional: RBAC demo users
# Set default password for demo users (team_a_user, team_b_user)
RBAC_DEMO_DEFAULT_PASSWORD=test
# TEAM_A_USER_PASSWORD=override_if_needed
# TEAM_B_USER_PASSWORD=override_if_needed
# Force reset demo user passwords on each run (true/false)
# RBAC_DEMO_FORCE_RESET=false
